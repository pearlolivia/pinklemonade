{
    "compilerOptions": {
        "baseUrl": "./",
		"paths": {
			"root": ["./"],
			"@": ["./src"],
			"assets/*": ["./src/assets/*"],
			"common/*": ["./src/common/*"],
			"components/*": ["./src/components/*"],
			"consts": ["./src/consts"],
			"hooks/*": ["./src/hooks/*"],
			"paths/*": ["./src/paths/*"],
			"store": ["./src/store"],
			"styles": ["./src/styles"],
			"utils": ["./src/utils"]
		},
        "target": "ESNext",
        "types": ["vite/client", "node"],
        "module": "esnext",
        "moduleResolution": "node",
        "lib": ["esnext", "dom", "dom.iterable"],
        "jsx": "react-jsx",
    },
    "include": ["src/index.tsx", "src/*.d.ts", "src/**/*"]
}